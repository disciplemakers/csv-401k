<h1>Listing employees</h1>

<table>
  <tr>
    <th>Last name</th>
    <th>First name</th>
    <th>Middle initial</th>
    <th>Ssn</th>
    <th>Birth date</th>
    <th>Hire date</th>
    <th>Termination date</th>
    <th>Gross salary</th>
    <th>Employee 401k</th>
    <th>Employer 401k</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @employees.each do |employee| %>
  <tr>
    <td><%= employee.last_name %></td>
    <td><%= employee.first_name %></td>
    <td><%= employee.middle_initial %></td>
    <td><%= employee.ssn %></td>
    <td><%= employee.birth_date %></td>
    <td><%= employee.hire_date %></td>
    <td><%= employee.termination_date %></td>
    <td><%= employee.gross_salary %></td>
    <td><%= employee.employee_401k %></td>
    <td><%= employee.employer_401k %></td>
    <td><%= link_to 'Show', employee %></td>
    <td><%= link_to 'Edit', edit_employee_path(employee) %></td>
    <td><%= link_to 'Destroy', employee, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

